<?xml version="1.0" encoding="UTF-8"?>
	<project name="JustekApp" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="${java.home}\..\lib\ant-javafx.jar"/>
				<file name="${java.home}\lib\jfxrt.jar"/>
				<file name="${basedir}"/>				
			</filelist>
		</path>
	
		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />
	
		<mkdir dir="externalLibs" />
	
		<copy todir="externalLibs">
			<fileset dir="C:\Users\cty\eclipse-workspace\JustekApp\libs">
				<filename name="jackson-databind-2.9.5.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\cty\eclipse-workspace\JustekApp\libs">
				<filename name="controlsfx-8.40.14.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\cty\eclipse-workspace\JustekApp\libs">
				<filename name="jcommon-1.0.23.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\cty\eclipse-workspace\JustekApp\libs">
				<filename name="fxgraphics2d-1.5.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\cty\eclipse-workspace\work\JustekApp\libs">
				<filename name="ojdbc6.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\cty\eclipse-workspace\JustekApp\libs">
				<filename name="json-simple-1.1.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\cty\eclipse-workspace\work\JustekApp\libs">
				<filename name="commons-dbcp-1.4.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\cty\eclipse-workspace\JustekApp\libs">
				<filename name="supinan2-util1.0.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\cty\eclipse-workspace\JustekApp\libs">
				<filename name="jfreechart-1.5.0.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\cty\eclipse-workspace\JustekApp\libs">
				<filename name="java-json.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\cty\eclipse-workspace\JustekApp\libs">
				<filename name="jackson-core-2.9.5.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\cty\eclipse-workspace\work\JustekApp\libs">
				<filename name="commons-pool-1.6.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\cty\eclipse-workspace\JustekApp\libs">
				<filename name="jackson-annotations-2.9.0.jar"/>
			</fileset>
		</copy>
	
		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="C:\Users\cty\eclipse-workspace\work\JustekApp">
				<include name="src/**" />
			</fileset>
		</copy>
	
		<mkdir dir="projectRefs" />
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="jackson-databind-2.9.5.jar"/>
				<include name="jackson-core-2.9.5.jar"/>
				<include name="supinan2-util1.0.jar"/>
				<include name="controlsfx-8.40.14.jar"/>
				<include name="java-json.jar"/>
				<include name="jackson-annotations-2.9.0.jar"/>
				<include name="fxgraphics2d-1.5.jar"/>
				<include name="jcommon-1.0.23.jar"/>
				<include name="ojdbc6.jar"/>
				<include name="jfreechart-1.5.0.jar"/>
				<include name="json-simple-1.1.jar"/>
				<include name="commons-pool-1.6.jar"/>
				<include name="commons-dbcp-1.4.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="MS949">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>
	
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="JustekApp.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
			<fx:fileset dir="dist" includes="resources/**"/>			
		</fx:resources>
	
		<fx:application id="fxApplication"
			name="JustekApp"
			mainClass="justek.ide.MainApp"
			toolkit="fx"
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/JustekApp.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="JustekApp"/>
				<attribute name="Implementation-Title" value="JustekApp"/>
				<attribute name="Implementation-Version" value="1.0"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="JustekApp" nativeBundles="exe"
			updatemode="background" >
	
			<fx:platform basedir="${java.home}"/>
			<fx:info title="JustekApp" vendor="JustekApp"/>
	
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>
	
	
	</target>
</project>
